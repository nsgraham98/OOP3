package utilities;

import shapes.Shape;
import java.util.Comparator;

public class BubbleSort {
    public static void sort(Shape[] arr, Comparator<Shape> comparator) {
        int n = arr.length;
        boolean swapped;

        for (int i = 0; i < n - 1; i++) {
            swapped = false;
            for (int j = 0; j < n - i - 1; j++) {
                // Descending order (larger first)
                if (comparator.compare(arr[j], arr[j + 1]) < 0) {
                    Shape temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                    swapped = true;
                }
            }
            if (!swapped) break;
        }
    }
}

 